#!/bin/bash


/sbin/modprobe nbd 
{% if VXLAN_NODENAME is defined %}
/sbin/nbd-client {{ hostvars[groups['dbserver'][0]]['VXLAN_NODENAME'] }} 4101 /dev/nbd1 -b 512

/sbin/nbd-client {{ hostvars[groups['dbserver'][0]]['VXLAN_NODENAME'] }} 4102 /dev/nbd4 -b 512

/sbin/nbd-client {{ hostvars[groups['dbserver'][0]]['VXLAN_NODENAME'] }} 4103 /dev/nbd7 -b 512
{% else %}
/sbin/nbd-client {{ hostvars[groups['dbserver'][0]]["ansible_" + VXLAN_DEV]['ipv4']['address'] }} 4101 /dev/nbd1 -b 512

/sbin/nbd-client {{ hostvars[groups['dbserver'][0]]["ansible_" + VXLAN_DEV]['ipv4']['address'] }} 4102 /dev/nbd4 -b 512

/sbin/nbd-client {{ hostvars[groups['dbserver'][0]]["ansible_" + VXLAN_DEV]['ipv4']['address'] }} 4103 /dev/nbd7 -b 512
{% endif %}

chmod 0660 /dev/nbd*
chown grid:asmadmin /dev/nb*


